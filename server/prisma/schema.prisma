generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  teacher
  student
}

model User {
  id    String @id @default(cuid())
  email String @unique
  role  Role
  name  String

  tests   Test[]       @relation("AuthorTests")
  results TestResult[] @relation("StudentResults")

  @@map("users")
}

model Test {
  id        String   @id @default(cuid())
  title     String
  authorId  String
  createdAt DateTime @default(now())

  author    User         @relation("AuthorTests", fields: [authorId], references: [id])
  questions Question[]
  results   TestResult[]

  @@map("tests")
}

model Question {
  id           String   @id @default(cuid())
  text         String
  options      String[]
  correctIndex Int
  testId       String

  test Test @relation(fields: [testId], references: [id])

  @@map("questions")
}

model TestResult {
  id          String   @id @default(cuid())
  testId      String
  studentId   String
  score       Int
  answers     Int[]
  completedAt DateTime @default(now())

  test    Test @relation(fields: [testId], references: [id])
  student User @relation("StudentResults", fields: [studentId], references: [id])

  @@map("test_results")
}
